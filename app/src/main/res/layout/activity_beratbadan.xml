<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context="com.example.user.babyiscoming.BeratBadan" >


        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/logonavy"/>

        <TextView
            android:id="@+id/textlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BABY IS COMING"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TABEL BERAT BADAN IDEAL"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:layout_below="@id/textlogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/texttabel" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tabelbb2"
        android:layout_below="@id/texttabel"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/texttensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABEL TEKANAN DARAH IDEAL"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/texttensi"
        android:src="@drawable/tabeltensi"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonstyle3"
        android:layout_alignParentBottom="true"
        android:text="back to home"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white" />

</RelativeLayout>